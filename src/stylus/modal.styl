@import 'imports/mixins'

$color_solid_white = #ffffff
$color_solid_yellow = #ffb546
$color_solid_green = #65cbc9
$color_solid_deep_green = #007473
$color_solid_blue = #212844

$color_transparent_green = rgba(0,116,115,.7)
$color_transparent_blue = rgba(33,40,68,.7)

// Animation when opening modal
.modal-transition-forward-enter-active
.modal-transition-forward-leave-active
.modal-transition-backward-enter-active
.modal-transition-backward-leave-active
  transition opacity .25s
  overflow hidden !important
  article .container
    transition transform .25s, opacity .25s

.modal-transition-forward-leave-active
  transition-delay .3s

.modal-transition-forward-enter-active
  article .container
    transition-delay .3s

.modal-transition-enter-to
.modal-transition-leave
  opacity 1
  article .container
    opacity 1
    transform scale(1)

.modal-transition-forward-enter
  opacity 0
  article .container
    opacity 0
    transform scale(.9)
.modal-transition-forward-leave-to
  opacity 0
  article .container
    opacity 0
    transform scale(1.1)

.modal-transition-backward-enter
  opacity 0
  article .container
    opacity 0
    transform scale(1.1)
.modal-transition-backward-leave-to
  opacity 0
  article .container
    opacity 0
    transform scale(.9)
// Animation when opening modal

.modal
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 6
  overflow-y auto
  &.social
    background-color $color_transparent_green
    color $color_solid_deep_green
  &.corporate
    background-color $color_transparent_blue
    color $color_solid_blue
  a.close-modal
    position absolute
    top 25px
    right 25px
    z-index 2
  article
    position relative
    width calc(100% - 50px)
    min-height calc(100% - 50px)
    padding 25px
    z-index 1
    flex_content(false)
    justify-content center
    align-items center
    .container
      position relative
      width 100%
      max-width 935px
      height 450px
      background-color $color_solid_white
      flex_content(true, false)
      header
        position absolute
        height 100px
        width calc(100% - 470px)
        top 0
        left 320px
        padding 0 100px 0 50px
        h2
          font-size 40px
          font-weight 300
          margin 50px 0 0 0
          line-height 50px
          &::before
            position absolute
            content ''
            left 50px
            bottom 0
            height 1px
            width 25px
            background-color $color_solid_yellow
      .image
      .description
        position relative
      .image
        flex 0 0 320px
        background-position center
        background-repeat no-repeat
        background-size cover
      .description
        flex 1 1 auto
        > section
          position relative
          margin-top 100px
          height calc(100% - 100px)
          .information
          .control
            position relative
          .information
            height calc(100% - 100px)
            > div
              position relative
              height 100%
              overflow-y scroll
              padding 0 42px 0 50px
          .control
            height 100px
            ul
              position relative
              margin 0 25px
              height 100%
              flex_content()
              justify-content flex-end
              align-items center

@media screen and (max-width: 768px)
  .modal
    article
      .container
        height auto
        max-width 500px
        flex_content(false, false)
        header
          position relative
          top auto
          left auto
          width calc(100% - 150px)
          h2
            margin 25px 0
            font-size 30px
            &::before
              bottom 25px
        .image
          flex 0 0 400px
        .description > section
          margin-top 50px
          height calc(100% - 50px)
          .information
            > div
              padding 0 50px
            p
              margin 0 0 25px 0

@media screen and (max-width: 414px)
  .modal
    article
      .container
        header
          padding 0 75px 0 25px
          width calc(100% - 100px)
          flex_content(false)
          justify-content center
          h2
            font-size 20px
            line-height 25px
            &::before
              display none
        .description
          > section
            margin-top 25px
            height calc(100% - 25px)
            .information > div
              padding 0 25px
            .control ul
              justify-content center