    border-color $color_solid_blue
    &::before
      color $color_solid_blue
    &:not(.secondary):hover
      background-color $color_solid_blue
      &::after
        color $color_solid_white
    &.secondary::before
      background-color $color_solid_blue
  &.color-green
    color $color_solid_green
    border-color $color_solid_green
    &::before
      color $color_solid_green
    &:not(.secondary):hover
      background-color $color_solid_green
      &::after
        color $color_solid_white
    &.secondary::before
      background-color $color_solid_green
  &.color-deep-green
    color $color_solid_deep_green
    border-color $color_solid_deep_green
    &::before
      color $color_solid_deep_green
    &:not(.secondary):hover
      background-color $color_solid_deep_green
      &::after
        color $color_solid_white
    &.secondary::before
      background-color $color_solid_deep_green

