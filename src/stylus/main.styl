.button
  position relative
  display inline-block
  background-color transparent
  padding 0
  cursor pointer
  border none
  &.principal
  &.action
    @extend .overflow-hidden
    border 1px solid
    transition border-color .35s, background-color .35s !important
    transition-timing-function cubic-bezier(0.2, 1, 0.3, 1)
    border-radius 2em
    line-height 50px
    text-align center
  &.principal
    padding 0 25px
    font-size 16px
    min-width 100px
    span
    &::after
      transition transform .35s, opacity .35s
      transition-timing-function cubic-bezier(0.2, 1, 0.3, 1)
    span
      position relative
      display block
      vertical-align middle
    &::after
      content attr(data-text)
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      opacity 0
      transform translateY(50%)
    &:hover
      span
        transform translateY(-50%)
        opacity 0
      &::after
        transform translateY(0)
        opacity 1
  &.action
    width 50px
    height 50px
    font-size 20px
    &::before
    &::after
      position absolute
      content ''
      width 50px
      height 50px
      line-height 50px
      text-align center
      @extend .icomoon
      transition transform .35s, color .35s
    &.close
      &::before
      &::after
        left 0
        @extend .icon-close::before
      &::before
        top 0
      &::after
        top 50px
      &:hover
        &::before
        &::after
          transform translateY(-50px)
    &[class*="-prev"]
    &[class*="-next"]
      &::before
      &::after
        top 0
      &::before
        left 0
    &[class*="-prev"]
      &::before
      &::after
        @extend .icon-arrow-left::before
      &::after
        right -50px
      &:hover
        &::before
        &::after
          transform translateX(-50px)
    &[class*="-next"]
      &::before
      &::after
        @extend .icon-arrow-right::before
      &::after
        left -50px
      &:hover
        &::before
        &::after
          transform translateX(50px)
  &.secondary
    line-height 25px
    text-align center
    &::before
      position absolute
      content ''
      left 0
      bottom 0
      width 100%
      height 1px
      transform scale(0,1)
      transform-origin left
      transition transform .35s
    &:hover::before
      transform scale(1,1)
  &.color-white
    color $color_solid_white
    border-color $color_solid_white
    &::before
      color $color_solid_white
    &:not(.secondary):hover
      background-color $color_solid_white
      &::after
        color $color_solid_yellow
    &.secondary::before
      background-color $color_solid_white
  &.color-yellow
    color $color_solid_yellow
    border-color $color_solid_yellow
    &::before
      color $color_solid_yellow
    &:not(.secondary):hover
      background-color $color_solid_yellow
      &::after
        color $color_solid_white
    &.secondary::before
      background-color $color_solid_yellow
  &.color-blue
