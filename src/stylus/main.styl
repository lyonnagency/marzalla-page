            content ''
            background-color $color_solid_yellow
            width 0
            height 1px
            bottom 5px
            @extend .horizontal-center
            transition width .25s
          &.router-link-exact-active::before
            width 20px
  .mobile-menu-button
    position absolute
    bottom 0
    right 0
    display block
    border none
    width 50px
    height 50px
    cursor pointer
    background-color transparent
    padding 0
    &::before
      position absolute
      content ''
      width 100%
      height 100%
      top 50%
      left 50%
      transform translate(-50%, -50%) rotate(45deg)
      background-color $color_solid_yellow
    i.bar
      position absolute
      height 1px
      background-color $color_solid_white
      top 50%
      left 50%
      width 20px
      &.top
        transform translate(-50%, -6px)
      &.middle
        transform translate(-50%, -50%)
        transition opacity .35s
      &.bottom
        top auto
        bottom 50%
        transform translate(-50%, 6px)
      &.top
      &.bottom
        transition transform .35s
  &.active
    > nav
      opacity 1
      visibility visible
      ul > li
        opacity 1
        transform translateY(0)
        &:nth-child(1)
          transition-delay .35s
        &:nth-child(2)
          transition-delay .4s
        &:nth-child(3)
          transition-delay .45s
        &:nth-child(4)
          transition-delay .5s
        &:nth-child(5)
          transition-delay .55s
        &:nth-child(6)
          transition-delay .6s
    .mobile-menu-button
      i.bar
        &.middle
          opacity 0
        &.top
          transform translate(-50%, -50%) rotate(45deg)
        &.bottom
          transform translate(-50%, -50%) rotate(-45deg)

