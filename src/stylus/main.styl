    &.color-green
      background-image url('../assets/img/floral_ornament_green.svg')
  &.ornament
    width 170px
    height 30px
    @extend .config-background
    background-size contain
    left 50%
    transform translateX(-50%)
    bottom 75px
    &.color-yellow
      background-image url('../assets/img/ornament_yellow.svg')
  &.testimony-marker
    position relative
    display inline-block
    width 50px
    height 50px
    font-size 24px
    color $color_solid_yellow
    text-align center
    &::before
      line-height 50px
    &::after
      position absolute
      top 50%
      left 50%
      content ''
      width 50px
      height 50px
      transform translate(-50%, -50%) rotate(45deg)
      box-shadow inset 0 0 0 1px $color_solid_yellow
  &.scroll-marker
    left 50%
    transform translateX(-50%)
    width 1px
    height 60px
    z-index 3
    bottom 50px
    &::before
    &::after
      position absolute
      content ''
    &::before
      top 0
      left 0
      width 1px
      height 50px
      transform scale(1,0)
      transform-origin top
      @extend .animate.scrollLoop
    &::after
      bottom 0
      left 50%
      width 20px
      height 20px
      transform translateX(-50%) rotate(45deg)
    &.yellow
      &::before
        background-color $color_solid_yellow
      &::after
        box-shadow 0 0 0 1px $color_solid_yellow

.mobile-menu
  position fixed
  bottom 35px
  right 35px
  z-index 4
  display none
  > nav
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    background-color rgba(255, 255, 255, .9)
    opacity 0
    visibility hidden
    transition opacity .35s, visibility .35s
    ul
      position relative
      height 100%
      flex_content(false)
      justify-content center
      li
        position relative
        opacity 0
        transform translateY(25px)
        transition opacity .35s, transform .35s
